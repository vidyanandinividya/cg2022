package session1;

public class Person {
	//these variables are "hidden" inside the object
	private String name;
	private int age;
	public Person(String name, int age) {
		super();
		this.name = name;
		this.age = age;
	}

	public void printPerson()
	{
		System.out.println(this.name+",age "+this.age+" years");
	}
	public void growOlder()
	{
		this.age+=1;
	}
}
